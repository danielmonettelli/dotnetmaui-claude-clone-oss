<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Claude.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#f1eee7">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a hovercraft number nine"
                Source="dotnet_bot.png"/>

            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource txtHeadline6_1}"
                Text="Hello, World!"/>

            <Label
                HorizontalTextAlignment="Center"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                SemanticProperties.HeadingLevel="Level2"
                Style="{StaticResource txtHeadline2_1}"
                Text="How can I help you&#10;this morning?"/>

            <Button
                x:Name="CounterBtn"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill"
                TextColor="White"
                SemanticProperties.Hint="Counts the number of times you click"
                Text="Click me"/>

            <!--  Styles Showcase Section  -->
            <BoxView
                Margin="0,20"
                BackgroundColor="LightGray"
                HeightRequest="2"/>

            <Label
                HorizontalOptions="Center"
                Style="{StaticResource txtHeadline6_1}"
                Text="Label Styles Showcase"/>

            <!--  Headline 2  -->
            <Border
                Padding="10"
                Stroke="LightGray"
                StrokeThickness="1">
                <VerticalStackLayout>
                    <Label
                        Style="{StaticResource txtSubtitle2_1}"
                        Text="txtHeadline2_1"/>
                    <Label
                        Style="{StaticResource txtHeadline2_1}"
                        Text="This is Headline 2 Style"/>
                </VerticalStackLayout>
            </Border>

            <!--  Headline 6 Styles  -->
            <Border
                Padding="10"
                Stroke="LightGray"
                StrokeThickness="1">
                <VerticalStackLayout>
                    <Label
                        Style="{StaticResource txtSubtitle2_1}"
                        Text="txtHeadline6_1"/>
                    <Label
                        Style="{StaticResource txtHeadline6_1}"
                        Text="This is Headline 6 Style 1"/>
                </VerticalStackLayout>
            </Border>

            <Border
                Padding="10"
                Stroke="LightGray"
                StrokeThickness="1">
                <VerticalStackLayout>
                    <Label
                        Style="{StaticResource txtSubtitle2_1}"
                        Text="txtHeadline6_2"/>
                    <Label
                        Style="{StaticResource txtHeadline6_2}"
                        Text="This is Headline 6 Style 2"/>
                </VerticalStackLayout>
            </Border>

            <Border
                Padding="10"
                Stroke="LightGray"
                StrokeThickness="1">
                <VerticalStackLayout>
                    <Label
                        Style="{StaticResource txtSubtitle2_1}"
                        Text="txtHeadline6_3"/>
                    <Label
                        Style="{StaticResource txtHeadline6_3}"
                        Text="This is Headline 6 Style 3"/>
                </VerticalStackLayout>
            </Border>

            <!--  Title Style  -->
            <Border
                Padding="10"
                Stroke="LightGray"
                StrokeThickness="1">
                <VerticalStackLayout>
                    <Label
                        Style="{StaticResource txtSubtitle2_1}"
                        Text="txtTitle_1"/>
                    <Label
                        Style="{StaticResource txtTitle_1}"
                        Text="This is Title Style 1"/>
                </VerticalStackLayout>
            </Border>

            <!--  Subtitle 2 Styles  -->
            <Border
                Padding="10"
                Stroke="LightGray"
                StrokeThickness="1">
                <VerticalStackLayout>
                    <Label
                        Style="{StaticResource txtSubtitle2_1}"
                        Text="txtSubtitle2_1"/>
                    <Label
                        Style="{StaticResource txtSubtitle2_1}"
                        Text="This is Subtitle 2 Style 1"/>
                </VerticalStackLayout>
            </Border>

            <Border
                Padding="10"
                Stroke="LightGray"
                StrokeThickness="1">
                <VerticalStackLayout>
                    <Label
                        Style="{StaticResource txtSubtitle2_1}"
                        Text="txtSubtitle2_2"/>
                    <Label
                        Style="{StaticResource txtSubtitle2_2}"
                        Text="This is Subtitle 2 Style 2"/>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
